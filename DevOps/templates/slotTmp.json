{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appServiceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the App Service"
            }
        }
    },
    "variables": {
        "appServicePlanName": "[concat(parameters('appServicePlanName'),'-asp')",
        "resourceIds": {
            "appServicePlanId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
            "appServiceId": "[resourceId('Microsoft.Web/sites', parameters('appServiceName'))]"
        }
    },
    "resources": [
        {
            "name": "staging",
            "type": "Microsoft.Web/sites/slots",
            "apiVersion": "2021-03-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "serverFarmId": "[variables('resourceIds').appServicePlanId]",
                "clientAffinityEnabled": false,
                "cloningInfo": {
                    "appSettingsOverrides": {},
                    "cloneCustomHostNames": "true",
                    "cloneSourceControl": "true",
                    "configureLoadBalancing": "true",
                    "sourceWebAppId": "[variables('resourceIds').appServiceId]"
                  }
            }
        }
    ]
}