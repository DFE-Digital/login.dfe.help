<div class="govuk-grid-row">

    <div class="govuk-grid-column-full">

        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Form submission successful
            </h1>
            <div class="govuk-panel__body">
                Thank you for submitting your request for assistance. We will attempt to respond within the next 5 working days.
            </div>
          </div>

    </div>

    <div class="govuk-grid-column-full">

        <div class="govuk-button-group">
            <% if (locals.isLoggedIn === true) { %>
                <a id="cancel" class="govuk-button" href="/dashboard" role="button">Return to help</a>
            <% } else { %>
                <a id="signin" class="govuk-button" href="<%= locals.redirectUri ? locals.redirectUri : locals.urls.services + '/my-services'%>" role="button">Return to sign in</a>
            <% } %>
        </div>
        
    </div>

</div>
