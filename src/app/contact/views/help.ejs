<div class="row">
    <div class="col-8">
        <h1 class="heading-xlarge">
            What do you need help with?
        </h1>
        <form method="post">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>"/>

            <div class="form-group <%= (locals.validationMessages.selectedHelp !== undefined) ? 'form-group-error' : '' %>">
                <fieldset>
                    <% if (locals.validationMessages.selectedHelp !== undefined) { %>
                    <p class="error-message" id="validation-selected-organisation"><%=locals.validationMessages.selectedHelp %></p>
                    <% } %>
                    <legend class="vh">Select what you need help with </legend>
                    <div class="multiple-choice">
                        <input id="access-service" type="radio" name="selectedHelp" value="access-service">
                        <label for="access-service">I am trying to access a DfE service</label>
                    </div>

                    <div class="multiple-choice">
                        <input id="access-org" type="radio" name="selectedHelp" value="access-org">
                        <label for="access-org">I am trying to access an organisation</label>
                    </div>

                    <div class="multiple-choice">
                        <input id="email-password" type="radio" name="selectedHelp" value="email-password">
                        <label for="email-password">I am trying to change my email/password</label>
                    </div>

                    <div class="multiple-choice">
                        <input id="approver" type="radio" name="selectedHelp" value="approver">
                        <label for="approver">Managing my users (Approvers)</label>
                    </div>
                </fieldset>
            </div>

            <div class="form-submit">
                <button class="button">Continue</button>
            </div>
        </form>
    </div>
</div>
