<div class="row">
    <div class="col-8">
        <h1 class="heading-xlarge">
            Which service are you trying to access?
        </h1>

        <p>Please select the service you are trying to access.  If the service is not listed select ‘Other’.</p>
        <form method="post">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>"/>
            <div class="form-group <%= (locals.validationMessages.service !== undefined) ? 'form-group-error' : '' %>">
                <label for="select-service"></label>
                <% if (locals.validationMessages.service !== undefined) { %>
                <p class="error-message" id="validation-service"><%=locals.validationMessages.service %></p>
                <% } %>
                <select class="form-control full-width" id="select-service" name="selectedService">
                    <option disabled selected>Please select a service</option>
                    <% for (let i = 0; i < locals.services.length; i++) {
                    let service = locals.services[i];%>
                        <option value="<%=service.id%>"><%=service.name%></option>
                    <% } %>
                    <option value="other">Other</option>
                </select>
            </div>

            <div class="form-submit submit-buttons">
                <button type="submit" class="button">Continue</button>
            </div>
        </form>

    </div>
</div>
